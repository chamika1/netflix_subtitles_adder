{
  "manifest_version": 3,
  "name": "Netflix Sinhala Subtitles",
  "version": "1.0.3",
  "description": "Add custom Sinhala subtitles to Netflix videos",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.netflix.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["subtitle-parser.js"],
      "matches": ["*://*.netflix.com/*"]
    }
  ]
}

